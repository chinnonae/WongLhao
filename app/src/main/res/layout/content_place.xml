<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="chinnonae.wonglhao.activities.PlaceActivity"
    tools:showIn="@layout/activity_place">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating: "
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/rating_text" />


        <TextView
            android:id="@+id/rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate this place"
            android:textSize="20dp"
            android:layout_below="@+id/rating_text"
            android:layout_alignParentStart="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/rate_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentStart="true"
            android:numStars="5"
            android:id="@+id/ratingBar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 People Review this place"
            android:id="@+id/review_button"
            android:layout_below="@id/ratingBar"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/promotion_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Promotion"
            android:textSize="25dp"
            android:layout_below="@id/review_button"/>

        <TextView
            android:id="@+id/promotion_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="no promotion"
            android:textSize="22dp"
            android:layout_below="@id/promotion_label"/>

        <TextView
            android:id="@+id/pricing_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Pricing"
            android:textSize="25dp"
            android:layout_below="@id/promotion_text"
            />

        <TextView
            android:id="@+id/pricing_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="no pricing specified"
            android:textSize="22dp"
            android:layout_below="@id/pricing_label"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
